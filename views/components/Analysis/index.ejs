<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Creator Records</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>

<body>
    <h1>Creator Records</h1>
    <table>
        <thead>
            <tr>
                <th>Attendee Name</th>
                <th>Score</th>
                <th>Date Submitted</th>
            </tr>
        </thead>
        <tbody>
            <% records.forEach(record => { %>
                <tr>
                    <td><%= record.attendee_name %></td>
                    <td><%= record.score %></td>
                    <td><%= new Date(record.createdAt).toLocaleString() %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>

</html>
